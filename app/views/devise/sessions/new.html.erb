<!DOCTYPE html>
  <html>
    <head>
    </head>

    <body id = "body_login">
      <div class="login_form_container">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
            <div class="user_login_container">
                <label class="user_login" id = "user_login" ><%= image_tag "user_log.png", :class => "user_login" %></label>  
            </div>

            <div class="field">
              <%= f.label :email, class: 'login_form_label', value: 'E-mail' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login_form_inputs' %>
            </div>

            <div class="field">
              <%= f.label :password, class: 'login_form_label', value: 'Senha' %><br />
              <%= f.password_field :password, autocomplete: "current-password",  class: 'login_form_inputs' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, value: 'Lembrar de mim' %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: 'form_submit_button', value: 'Entrar' %>
            </div>

            <div class="actions">
               <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: 'register_new_user' %><br />
            </div> 

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Esqueceu sua senha ?", new_password_path(resource_name), class: 'register_new_user' %><br />
            <% end %>                        

        <% end %>

      </div>
    </body>

  </html>









