
<% if resource.errors.any? %>

    <script type="text/javascript">
      
      $(".login_form_container").hide();
      
      alert(

          <% if resource.errors.messages[:password_confirmation].present? %>

             "<%= resource.errors.messages[:password_confirmation].first.to_s %>"

          <% elsif resource.errors.messages[:password].present? %>

             "<%= resource.errors.messages[:password].first %>"

          <% elsif resource.errors.messages[:email].present? %>

            "<%= resource.errors.messages[:email].first %>"

           <% else %>
             
              <% resource.errors.full_messages.each do |message| %>
               "<%= message %>"
              <% end %>

          <% end %>  

        );
    </script>

<% end %>
